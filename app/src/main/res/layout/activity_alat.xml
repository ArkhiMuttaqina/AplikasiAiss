<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alat">

    <ImageView
        android:layout_width="720dp"
        android:layout_height="1280dp"
        android:background="@drawable/bgalat"
        android:contentDescription="@string/todo" />

        <RelativeLayout
            android:layout_width="356dp"
            android:layout_height="460dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="250dp"
            >

            <ImageButton

                android:id="@+id/kolintang"
                android:layout_width="176dp"
                android:layout_height="233dp"
                android:background="@drawable/kolintang"
                android:scaleType="centerCrop"
                android:contentDescription="@string/todo"
                android:hapticFeedbackEnabled="true" />
            <ImageButton
                android:id="@+id/aramba"
                android:layout_width="176dp"
                android:layout_height="233dp"
                android:hapticFeedbackEnabled="true"
                android:layout_marginStart="174dp"
                android:background="@drawable/aramba"
                android:contentDescription="@string/todo" />
            <ImageButton
                android:id="@+id/gambus"
                android:layout_width="176dp"
                android:layout_height="233dp"
                android:hapticFeedbackEnabled="true"
                android:layout_marginTop="230dp"
                android:background="@drawable/gambus"
                android:contentDescription="@string/todo" />
            <ImageButton
                android:id="@+id/saluang"
                android:layout_width="176dp"
                android:layout_height="233dp"
                android:hapticFeedbackEnabled="true"
                android:layout_marginTop="230dp"
                android:layout_marginStart="174dp"
                android:background="@drawable/saluang"
                android:contentDescription="@string/todo" />
        </RelativeLayout>



</RelativeLayout>