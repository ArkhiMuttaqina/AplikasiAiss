<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgwawasan"
    tools:context=".WawasanActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/menuAlat"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/menualat"
            android:scaleType="fitXY"
            android:contentDescription="@string/todo" />
        <ImageButton
            android:id="@+id/menuTari"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/menutari"
            android:scaleType="fitXY"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/menuSuku"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/menusuku"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/menuRumah"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/menurumah"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY" />
    </LinearLayout>




</LinearLayout>